<!DOCTYPE html>
<html lang="en" ng-app="companyApp">

<%- include header.ejs %>

  <body>
    <div class="page-container">
    
        <%- include navigation-bar.ejs %>

        <!--/main-->
        <div class="col-xs-12 col-sm-9" data-spy="scroll" data-target="#sidebar-nav">
        
			<div class="col-sm-6 col-md-4 col-md-offset-4">
				<h1 class="text-center login-title">Registration Details
					<div class="signup-wall">

						<form action="/signup" method="POST" class="form-signin">

							<input type="text" name="username" placeholder="Username" required autofocus class="form-control">

							<input type="password" name="password" placeholder="Password" required class="form-control">

							<button type="submit" class="btn btn-lg btn-primary btn-block">Register</button>

							<span class="clearfix"></span>
						</form>
					</div>
					<div id="message">
						<h1 class="text-center error-message"></h1>
					</div>
				</h1>
			</div>

        <div class="clearfix"></div>
          
        <hr>
          
        </div><!--/.col-xs-12-->
      </div><!--/.row-->
    </div><!--/.container fluid-->
    </div><!--/.page container-->
  
    <%- include footer.ejs %>

  </body>
</html>
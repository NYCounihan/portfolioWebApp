<!DOCTYPE html>
<html lang="en" ng-app="companyApp">

<%- include header.ejs %>

  <body>
    <div class="page-container">

		<%- include navigation-bar-public.ejs %>
        
        <!--/main-->
        <div class="col-xs-12 col-sm-9" data-spy="scroll" data-target="#sidebar-nav">
        
			<div class="col-sm-6 col-md-4 col-md-offset-4">
				<h1 class="text-center login-title">Log In
					<div class="account-wall">
						<img src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120" class="profile-img">

						<form action="/login" method="POST" class="form-signin">
							<input type="text" name="username" placeholder="Email" required autofocus class="form-control">

							<input type="password" name="password" placeholder="Password" required class="form-control">

							<button type="submit" class="btn btn-lg btn-primary btn-block">Sign in</button>

							<span class="clearfix"></span>
						</form>
					</div>

					<a href="/signup" class="text-center new-account">Create an account</a>

					<div id="message"></div>

					<h1 class="text-center error-message"></h1></h1>
			</div>

        <div class="clearfix"></div>
          
        <hr>
          
        </div><!--/.col-xs-12-->
      </div><!--/.row-->
    </div><!--/.container fluid-->
    </div><!--/.page container-->
  
    <%- include footer.ejs %>

  </body>
</html>

